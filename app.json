{
  "expo": {
    "name": "Restaurant Events",
    "slug": "restaurant-events",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.svg",
    "splash": {
      "image": "./assets/splash.svg",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.restaurantevents",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to find restaurants near you."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.svg",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.yourcompany.restaurantevents",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/icon.svg"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Restaurant Events to use your location to find nearby restaurants."
        }
      ]
    ]
  }
}
